generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  externalId String @unique
  firstName String?
  lastName String?
  // email String? @unique
  poll Poll[]
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Poll{
  id String @id @default(uuid())
  title String 
  description String? 
  user User @relation(fields: [pollId],references: [id])
  pollId String 
  option Option[]
}

model Option{
  id String @id @default(uuid())
  title String
  description String? 
  poll Poll @relation(fields: [optionId],references: [id])
  optionId String 
}